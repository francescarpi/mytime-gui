{
  "productName": "mytime",
  "version": "0.8.11",
  "identifier": "com.farpi.mytime",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MyTime",
        "width": 1200,
        "height": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE4MTE5MkRGQTNERjc4MEYKUldRUGVOK2ozNUlScU9XMmtQUHh2VVdERjNNRWh6bktJNE85UXh2OWFHbzlrbkJzUjFHTGxXeU4K",
      "endpoints": [
        "https://github.com/francescarpi/mytime-gui/releases/latest/download/latest.json"
      ]
    },
    "cli": {
      "description": "MyTime CLI",
      "args": [
        {
          "short": "t",
          "name": "tasks",
          "description": "List of tasks",
          "takesValue": true
        },
        {
          "short": "s",
          "name": "summary",
          "description": "Tasks summary",
          "takesValue": true
        }
      ],
      "subcommands": {}
    }
  }
}
